{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "0.1.0.0",
  "parameters": {
    "keyVaultName": {
      "type": "string"
    },
    "setterFunction": {
      "type": "object"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('keyVaultName'), '/add')]",
      "type": "Microsoft.KeyVault/vaults/accessPolicies",
      "apiVersion": "2018-02-14",
      "properties": {
        "accessPolicies": [
          {
            "tenantId": "[parameters('setterFunction').identity.tenantId]",
            "objectId": "[parameters('setterFunction').identity.principalId]",
            "permissions": {
              "secrets": [
                "all"
              ]
            }
          }
        ]
      }
    }
  ],
  "outputs": {
  }
}