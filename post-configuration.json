{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "0.1.0.0",
  "parameters": {
    "keyVaultName": {
      "type": "string"
    },
    "setterFunction": {
      "type": "object"
    },
    "getterFunction": {
      "type": "object"
    }
  },
  "variables": {
    "keyVaultSecrets": "[createArray(parameters('setterFunction'), parameters('getterFunction'))]",
    "copy": [
      {
        "name": "keyVaultAccessPolicies",
        "count": "[length(variables('keyVaultSecrets'))]",
        "input": {
          "tenantId": "[variables('keyVaultSecrets')[copyIndex('keyVaultAccessPolicies')].identity.tenantId]",
          "objectId": "[variables('keyVaultSecrets')[copyIndex('keyVaultAccessPolicies')].identity.principalId]",
          "permissions": {
            "secrets": [
              "all"
            ]
          }
        }
      }
    ]
  },
  "resources": [
    {
      "name": "[concat(parameters('keyVaultName'), '/add')]",
      "type": "Microsoft.KeyVault/vaults/accessPolicies",
      "apiVersion": "2018-02-14",
      "properties": {
        "accessPolicies": "[variables('keyVaultAccessPolicies')]"
      }
    }
  ],
  "outputs": {
  }
}