{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "0.1.0.0",
  "parameters": {
    "projectName": {
      "type": "string"
    },
    "keyVaultSku": {
      "type": "string",
      "defaultValue": "standard",
      "allowedValues": [
        "premium",
        "standard"
      ]
    },
    "keyVaultDefaultAccessPolicy": {
      "type": "object",
      "metadata": {
        "description": "Set an object like {\"tenantId\": <TENANT ID>, \"objectId\": <OBJECT ID>}."
      }
    },
    "keyVaultDefaultSecret": {
      "type": "secureObject",
      "metadata": {
        "description": "Set an object like {\"name\": <SECRET NAME>, \"value\": <SECRET VALUE>}."
      }
    },
    "appServicePlanSku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "P1V2",
        "P2V2",
        "P3V2",
        "PC2",
        "PC3",
        "PC4",
        "S1",
        "S2",
        "S3"
      ],
      "metadata": {
        "description": "In case of App Service on Linux, you cannot choose Free plan."
      }
    },
    "storageAccountSku": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Standard_ZRS",
        "Premium_LRS",
        "Premium_ZRS",
        "Standard_GZRS",
        "Standard_RAGZRS"
      ]
    }
  },
  "variables": {
    "location": "[if(contains(deployment(), 'location'), deployment().location, resourceGroup().location)]"
  },
  "resources": [
    {
      "name": "sharedResources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'shared-resources.json')]",
          "contentVersion": "0.1.0.0"
        },
        "parameters": {
          "projectName": {
            "value": "[parameters('projectName')]"
          },
          "keyVaultSku": {
            "value": "[parameters('keyVaultSku')]"
          },
          "keyVaultDefaultAccessPolicy": {
            "value": "[parameters('keyVaultDefaultAccessPolicy')]"
          },
          "keyVaultDefaultSecret": {
            "value": "[parameters('keyVaultDefaultSecret')]"
          },
          "appServicePlanSku": {
            "value": "[parameters('appServicePlanSku')]"
          }
        }
      }
    },
    {
      "name": "setterResources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'setter-resources.json')]",
          "contentVersion": "0.1.0.0"
        },
        "parameters": {
          "projectName": {
            "value": "[parameters('projectName')]"
          },
          "storageAccountSku": {
            "value": "[parameters('storageAccountSku')]"
          },
          "appServicePlanResourceId": {
            "value": "[reference('sharedResources').outputs.appServicePlanResourceId.value]"
          },
          "keyVaultName": {
            "value": "[reference('sharedResources').outputs.keyVaultName.value]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'sharedResources')]"
      ]
    },
    {
      "name": "getterResources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'getter-resources.json')]",
          "contentVersion": "0.1.0.0"
        },
        "parameters": {
          "projectName": {
            "value": "[parameters('projectName')]"
          },
          "sharedResources": {
            "value": "[reference('sharedResources').outputs]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'sharedResources')]"
      ]
    },
    {
      "name": "postConfiguration",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'post-configuration.json')]",
          "contentVersion": "0.1.0.0"
        },
        "parameters": {
          "keyVaultName": {
            "value": "[reference('sharedResources').outputs.keyVaultName.value]"
          },
          "setterFunction": {
            "value": "[reference('setterResources').outputs.function.value]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'setterResources')]",
        "[resourceId('Microsoft.Resources/deployments', 'getterResources')]"
      ]
    }
  ],
  "outputs": {
    "sharedResources": {
      "type": "object",
      "value": "[reference('sharedResources').outputs]"
    },
    "setterResources": {
      "type": "object",
      "value": "[reference('setterResources').outputs]"
    },
    "getterResources": {
      "type": "object",
      "value": "[reference('getterResources').outputs]"
    },
    "postConfiguration": {
      "type": "object",
      "value": "[reference('postConfiguration').outputs]"
    }
  }
}