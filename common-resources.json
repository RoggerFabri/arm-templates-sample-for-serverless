{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "0.1.0.0",
  "parameters": {
    "projectName": {
      "type": "string"
    },
    "keyVaultSku": {
      "type": "string",
      "defaultValue": "standard",
      "allowedValues": [
        "premium",
        "standard"
      ]
    },
    "appServicePlanSku": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "P1V2",
        "P2V2",
        "P3V2",
        "PC2",
        "PC3",
        "PC4",
        "S1",
        "S2",
        "S3"
      ]
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "appServicePlanName": "[concat(parameters('projectName'), '-plan')]",
    "keyVaultName": "[concat(parameters('projectName'), '-keyvault')]",
    "keyVaultSecrets": {
      "copy": [
        {
          "name": "keyVaultSecretDefinitionsCopy",
          "count": 2,
          "input": {
            "name": "[concat('secretName', copyIndex('keyVaultSecretDefinitionsCopy'))]",
            "value": "[concat('secretValue', copyIndex('keyVaultSecretDefinitionsCopy'))]"
          }
        }
      ]
    }
  },
  "resources": [
    {
      "name": "[variables('appServicePlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "kind": "functionapp,linux",
      "location": "[variables('location')]",
      "sku": "[parameters('appServicePlanSku')]",
      "properties": {}
    },
    {
      "name": "[variables('keyVaultName')]",
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2018-02-14",
      "location": "[variables('location')]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": "[parameters('keyVaultSku')]"
      },
      "resources": [
        {
          "name": "[variables('keyVaultSecrets')[copyIndex('keyVaultSecretsCopy')]]",
          "type": "secrets",
          "apiVersion": "2018-02-14",
          "properties": {
            "value": "[variables('keyVaultSecrets')[copyIndex('keyVaultSecretsCopy')]]"
          },
          "copy": {
            "name": "keyVaultSecretsCopy",
            "count": "[length(variables('keyVaultSecrets'))]"
          }
        }
      ]
    }
  ],
  "outputs": {
    "resourceIds": {
      "type": "object",
      "value": {
        "keyVaultResourceId": "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "appServicePlanResourceId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      }
    }
  }
}
